<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud_checkout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/done">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt thành công!"
            android:textStyle="bold"
            android:textSize="23dp"
            android:gravity="center">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cám ơn bạn đã sử dụng dịch vụ của chúng tôi!" 
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textStyle="italic">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_search_background"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:id="@+id/img"
                    android:src="@drawable/img_tour1"
                    app:riv_corner_radius="10dp">
                </com.makeramen.roundedimageview.RoundedImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/tvTen"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Tour 4 ngày 3 đêm Hà Giang"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:textSize="15sp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvMoTa"
                            android:text="Travelers planning a trip to Europe should consider visiting Italy, known for its rich history, stunning a"
                            android:textSize="13sp"
                            android:layout_marginRight="10dp"
                            android:textStyle="normal">
                        </TextView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày đặt:">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNgayDat"
                android:layout_marginLeft="10dp">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#DAD6D6"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Họ và tên"></TextView>

            <TextView
                android:id="@+id/edtHoTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:text="Tran Van A"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Số điện liên hệ"></TextView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/edtSoDienThoai"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:text="0123456789"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textStyle="bold"
               ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Email liên hệ"></TextView>

            <TextView
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="abc@gmnail.com"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"></TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"
                android:background="#DAD6D6"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Thành tiền"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="10dp"></TextView>
                <TextView
                    android:id="@+id/tvThanhTien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="10dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:id="@+id/btnQuayVeTrangChu"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/blue"
        android:layout_gravity="center"
        android:text="Quay về trang chủ">
    </Button>


</LinearLayout>