<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:id="@+id/imgRating"
                android:src="@drawable/img_tour1"
                app:riv_corner_radius="10dp">
            </com.makeramen.roundedimageview.RoundedImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/tvName"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginTop="10dp"
                        android:text="Tour 4 ngày 3 đêm Hà Giang"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:textSize="15sp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:id="@+id/tvRatingMoTa"
                        android:text="Travelers planning a trip to Europe should consider visiting Italy, known for its rich history, stunning a"
                        android:textSize="13sp"
                        android:layout_marginRight="10dp"
                        android:textStyle="normal">
                    </TextView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#DAD6D6"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Bạn đã đánh giá"
            android:textSize="10sp">
        </TextView>
        <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:id="@+id/itemratingBar"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3.5"
            android:layout_marginTop="4dp"
            android:progressTint="#FFB800"
            android:stepSize="0.1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="right"
            android:id="@+id/tvNgayDanhGia"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="11/11/2023"
            android:textSize="10sp">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This formula will generate a random paragraph that could be used as a review or feedback based on a rating."
        android:textStyle="normal"
        android:id="@+id/tvRatingNoiDung"
        android:textSize="10sp"
        android:layout_margin="10dp"
        >
    </TextView>
</LinearLayout>