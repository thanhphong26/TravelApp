<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Phần nền của hình dạng với viền -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>

        </shape>
    </item>

    <!-- Phần hình ảnh được đặt ở bên phải -->
    <item
        android:right="4dp"> <!-- Khoảng cách từ phía bên phải -->
        <bitmap
            android:src="@drawable/imgmap3"
            android:gravity="center"
            android:scaleType="fitXY" />
    </item>

</layer-list>
